{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*",
    "src/**/*.stories.*",
    "src/**/__mocks__/*"
  ],
  "references": [
    {
      "path": "../components"
    },
    {
      "path": "../log"
    },
    {
      "path": "../react-hooks"
    },
    {
      "path": "../redux"
    }
  ]
}