{ 
  "extends": "@deephaven/tsconfig",
  "compilerOptions": {
    "target": "es2017",
    "declarationDir": "dist/",
    "outDir": "dist/",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*",
    "src/**/*.stories.*",
    "src/__mocks__/*"
  ]
}
