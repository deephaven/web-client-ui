{
  "extends": "./packages/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    // Override node_modules/@types
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@deephaven/*": [
        "./packages/*/src"
      ],
      // This is used to override node_modules/@types
      // https://github.com/microsoft/TypeScript/issues/22217
      "*": [
        "*",
        "./@types/*"
      ]
    },
    "types": [
      "jest",
      "node"
    ],
  },
  "files": [],
  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/dist"
    ]
  },
  "references": [
    {
      "path": "./packages/chart"
    },
    {
      "path": "./packages/components"
    },
    {
      "path": "./packages/console"
    },
    {
      "path": "./packages/dashboard"
    },
    {
      "path": "./packages/dashboard-core-plugins"
    },
    {
      "path": "./packages/file-explorer"
    },
    {
      "path": "./packages/golden-layout"
    },
    {
      "path": "./packages/grid"
    },
    {
      "path": "./packages/iris-grid"
    },
    {
      "path": "./packages/jsapi-shim"
    },
    {
      "path": "./packages/jsapi-components"
    },
    {
      "path": "./packages/log"
    },
    {
      "path": "./packages/pouch-storage"
    },
    {
      "path": "./packages/react-hooks"
    },
    {
      "path": "./packages/redux"
    },
    {
      "path": "./packages/storage"
    },
    {
      "path": "./packages/utils"
    }
  ]
}